{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "emitDeclarationOnly": false,
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "noEmit": false,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"]
}
